@model MovieForum.Models.Comment

@{
    ViewData["Title"] = "Create";
}
<div class="row d-flex justify-content-center newLink">
    <div class="col-6">
        <h1>Create</h1>
        <h4>Comment</h4>
        <hr />
        <div class="row">
            <div class="col-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DiscussionId" />
                    <div class="form-group">

                        <textarea asp-for="Content" rows="4" class="form-control" placeholder="Enter your comment here"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3 d-flex justify-content-between">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-controller="Home" asp-action="DiscussionDetails" asp-route-id="@Model.DiscussionId">Back to Post</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
